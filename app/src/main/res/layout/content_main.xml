<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/texto_central"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:fontFamily="@font/gugi_regular"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:text="Button"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="55dp" />

    <Button
        android:id="@+id/boton_main_dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorRed"
        android:text="Button"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@+id/boton_main"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/boton_tres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/boton_main_dos"
        tools:layout_editor_absoluteX="148dp" />

</android.support.constraint.ConstraintLayout>